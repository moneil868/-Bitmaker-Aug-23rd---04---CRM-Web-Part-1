<p class="contact_bar">There are
  <%= @contacts.size %>
  contacts.</p>
<div>
  <% @contacts.each do |contact| %>
  <p class="contacts-display"><%= contact.full_name %>
    (<%= contact.email %>)
    <br/>
    <a href='/contacts/<%= contact[:id] %>'>View</a>
    |
    <a href="/contacts">Edit</a>
    |
    <a href="/contacts">Delete</a>
  </p>
  <% end %>
</div>
