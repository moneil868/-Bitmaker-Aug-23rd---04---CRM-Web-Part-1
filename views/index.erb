<div class="header">
  <h1>BitMaker CRM</h1>
</div>
<nav>
  <ul>
    <li><a href="/about">Home</a> </li>
    <li><a href="/about">Add a Contact</a> </li>
    <li><a href="/about">About</a> </li>
  </ul>
</nav>
<main>
  <p class="contact_bar">There are <%= @contacts.size %> contacts.</p>
  <div>
    <% @contacts.each do |contact| %>
    <p class="contacts-display"><%= contact.full_name %> (<%= contact.email %>)
    <br/><a href="/contacts">Edit</a> | <a href="/contacts">Delete</a></p>
    <% end %>
  </div>
</main>
