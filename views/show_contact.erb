<div class="contacts-display">
  <p><span>First Name:</span> <%= @contact.first_name %> | <span>Last Name:</span> <%= @contact.last_name %></p>
  <p><span>Email Address:</span> <%= @contact.email %></p>
  <p><span>Note:</span> <%= @contact.note %></p>
  <div class="float-left">
    <form onsubmit="confirm('Are you sure you want to delete the following note?')" action="/contacts/<%= @contact[:id] %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="delete-button">Delete</button>
    </form>
  </div>
  <div class="align-right">
    <a href='/'>Back to Main Page</a>
  </div>




</div>
